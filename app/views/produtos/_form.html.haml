= form_for(produto) do |f|
  - if produto.errors.any?
    #error_explanation
      %h2= t('record_invalid', scope: [:activerecord, :errors, :messages], errors: nil)
      %ul
        - produto.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :nome
    = f.text_field :nome
  .field
    = f.label :descricao
    = f.text_area :descricao
  .field
    = f.label :tipo
    = f.collection_select :tipo_id, @tipos, :id, :nome, prompt: true
  .field
    = f.label :valor
    = f.number_field :valor, min: 1
  .field
    = f.label :estoque
    = f.number_field :estoque, min: 1
  .actions
    = f.submit
