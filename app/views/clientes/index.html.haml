%p#notice= notice
%h1= t('one', scope: [:activerecord, :models, :cliente])
%table
  %thead
    %tr
      %th= t('nome', scope: [:activerecord, :models, :cliente])
      %th= t('sobrenome', scope: [:activerecord, :models, :cliente])
      %th{:colspan => "3"}
  %tbody
    - @clientes.each do |cliente|
      %tr
        %td= cliente.nome
        %td= cliente.sobrenome
        %td= link_to t('show'), cliente
        %td= link_to t('edit'), edit_cliente_path(cliente)
        %td= link_to t('destroy'), cliente, method: :delete, data: { confirm: t('confirm') }
%br/
= link_to t('new', scope: [:activerecord, :models, :cliente]), new_cliente_path
