%p#notice= notice
%h1= t('other', scope: [:activerecord, :models, :cliente])
%table
  %thead
    %tr
      %th= t('nome', scope: [:activerecord, :attributes, :cliente])
      %th= t('sobrenome', scope: [:activerecord, :attributes, :cliente])
      %th{:colspan => "3"}
  %tbody
    - @clientes.each do |cliente|
      %tr
        %td= cliente.nome
        %td= cliente.sobrenome
        %td= link_to t('exibir'), cliente
        %td= link_to t('editar'), edit_cliente_path(cliente)
        %td= link_to t('excluir'), cliente, method: :delete, data: { confirm: t('confirmar') }
%br/
= link_to t('novo', scope: [:activerecord, :attributes, :cliente]), new_cliente_path
= link_to t('voltar'), root_path
