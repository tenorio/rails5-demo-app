= form_for(cliente) do |f|
  - if cliente.errors.any?
    #error_explanation
      %h2= t('record_invalid', scope: [:activerecord, :errors, :messages], errors: nil)
      %ul
        - cliente.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :nome
    = f.text_field :nome
  .field
    = f.label :sobrenome
    = f.text_field :sobrenome
  .field
    = f.label :sexo
    = f.select :sexo, options_for_select(get_sex)
  .field
    = f.label :data_nascimento
    = f.date_field :data_nascimento
  .field
    = f.label :endereco
    = f.text_field :endereco
  .field
    = f.label :cep
    = f.text_field :cep
  .field
    = f.label :email
    = f.email_field :email
  .field
    = f.label :uf
    = f.select :uf, options_for_select((I18n.locale == :'pt-BR' ? br_states : us_states), cliente.uf)
  .field
    = f.label :cidade
    = f.text_field :cidade
  .field
    = f.label :pais
    = f.text_field :pais
  .field
    = f.label :newsletter
    = f.check_box :newsletter
  .actions
    = f.submit
