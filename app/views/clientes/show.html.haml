  %strong= t('data_nascimento', scope: [:activerecord, :attributes, :cliente])
  = l @cliente.data_nascimento, format: :long
%p
  %strong= t('endereco', scope: [:activerecord, :attributes, :cliente])
  = @cliente.endereco
%p
  %strong= t('cep', scope: [:activerecord, :attributes, :cliente])
