%p
  %strong= t('email', scope: [:activerecord, :attributes, :cliente])
  = @cliente.email
%p
  %strong= t('uf', scope: [:activerecord, :attributes, :cliente])
  = @cliente.uf
%p
  %strong= t('cidade', scope: [:activerecord, :attributes, :cliente])
  = @cliente.cidade
%p
  %strong= t('pais', scope: [:activerecord, :attributes, :cliente])
  = @cliente.pais
%p
  %strong= t('newsletter', scope: [:activerecord, :attributes, :cliente])
