= form_for(user) do |f|
  - if user.errors.any?
    #error_explanation
      %h2= t('activerecord.errors.messages.record_invalid')
      %ul
        - user.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.label :password_confirmation
    = f.password_field :password_confirmation
  .actions
    = f.submit
